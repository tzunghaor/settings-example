{% extends 'base.html.twig' %}

{% block explanation %}
<div class="explanation">
    This is the example page in the tzunghaor/settings-example application.
</div>
{% endblock %}

{% block body %}
    <div class="defaultBox">
        <div class="explanation">
            The display and content of this box are controlled by the "default"
            settings collection.
        </div>

        <h3>{{ contentSettings.title }}</h3>
        {% for message in contentSettings.messages %}
            <div class="message message_{{ message.type }}">{{ message.text }}</div>
        {% endfor %}
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <style>
        .defaultBox {
            background: #EEEEEE;
            padding: {{ displaySettings.padding }}pt;
            margin: {{ displaySettings.margin }}pt;
            {% for which in displaySettings.borders %}
            border-{{ which }}: 1px solid {{ displaySettings.borderColor }};
            {% endfor %}
        }

        .message {
            padding: 0.3em 0.5em;
            margin: 0.4em 0;
            border-style: solid;
            border-width: 1px;
        }

        .message_info {
            background: lightblue;
            border-color: darkblue;
        }

        .message_success {
            background: lightgreen;
            border-color: darkgreen;
        }

        .message_error {
            background: pink;
            border-color: darkred;
        }
    </style>
{% endblock %}
